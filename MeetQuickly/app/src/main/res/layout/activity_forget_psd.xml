<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.login.ForgetPsdActivity">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_back_black"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="60dp"
        android:text="忘记密码"
        android:textColor="@color/font_black"
        android:textSize="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_phone_numb"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="36dp"
        android:layout_marginRight="38dp"
        android:background="@null"
        android:maxLength="11"
        android:inputType="number"
        android:hint="+86   请输入手机号码"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv" />

    <View
        android:id="@+id/view_phone_numb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_phone_numb" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_verification_code"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="120dp"
        android:background="@null"
        android:hint="验证码"
        android:maxLength="6"
        android:inputType="number"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_phone_numb" />

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:background="@drawable/shape_bt_white"
        android:text="获取验证码"
        android:gravity="center"
        android:textColor="@color/themeColor"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="@id/et_phone_numb"
        app:layout_constraintTop_toBottomOf="@id/et_phone_numb"
        android:layout_marginTop="12dp"
        />

    <View
        android:id="@+id/view_verification_code"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_verification_code" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@null"
        android:hint="新密码"
        android:maxLength="16"
        android:inputType="textPassword"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_verification_code" />

    <View
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@null"
        android:hint="确认新密码"
        android:maxLength="16"
        android:inputType="textPassword"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_password" />

    <View
        android:id="@+id/view_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_bt_gray"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/font_black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/view_confirm_password" />

</android.support.constraint.ConstraintLayout>