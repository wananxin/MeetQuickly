<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <!--个人资料视频-->

            <ImageView
                android:id="@+id/iv_share_moment"
                android:layout_width="165dp"
                android:layout_height="225dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/demo_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageViewWatch"
                android:layout_width="18dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@mipmap/ic_look_white" />

            <TextView
                android:id="@+id/textViewWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="56"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewWatch"
                app:layout_constraintStart_toEndOf="@+id/imageViewWatch"
                app:layout_constraintTop_toTopOf="@+id/imageViewWatch" />

            <ImageView
                android:id="@+id/imageViewPrase"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/textViewWatch"
                app:layout_constraintStart_toEndOf="@+id/textViewWatch"
                app:layout_constraintTop_toTopOf="@+id/textViewWatch"
                app:srcCompat="@mipmap/ic_like_white" />

            <TextView
                android:id="@+id/textViewPrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="128"
                android:textColor="@color/white"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewPrase"
                app:layout_constraintStart_toEndOf="@+id/imageViewPrase"
                app:layout_constraintTop_toTopOf="@+id/imageViewPrase" />

            <ImageView
                android:id="@+id/imageViewDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_img_delete" />


        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>