<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="98dp">

    <!--合伙人收益详情-->



    <ImageView
        android:id="@+id/iv_user_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="彭鑫呀"
        android:textSize="16dp"
        android:textColor="@color/font_black6"
        app:layout_constraintStart_toEndOf="@+id/iv_user_head"
        app:layout_constraintTop_toTopOf="@+id/iv_user_head" />

    <ImageView
        android:id="@+id/iv_sex"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
        app:layout_constraintStart_toEndOf="@+id/tv_user_name"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name"
        android:src="@mipmap/ic_men" />

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="26"
        android:textColor="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_user_name"
        app:layout_constraintStart_toEndOf="@+id/iv_sex"
        app:layout_constraintTop_toTopOf="@+id/tv_user_name" />

    <TextView
        android:id="@+id/tv_recommend_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="推荐人：郭子豪"
        android:textSize="12dp"
        android:textColor="@color/font_gray"
        app:layout_constraintBottom_toBottomOf="@+id/iv_user_head"
        app:layout_constraintStart_toEndOf="@+id/iv_user_head" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="开通时间：2019-03-24"
        android:textColor="@color/font_gray"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_user_head"
        app:layout_constraintTop_toBottomOf="@+id/tv_recommend_name" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_gray"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="65dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_numb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="+120"
        android:textSize="16dp"
        android:textColor="#36CBFC"
        app:layout_constraintBottom_toBottomOf="@+id/tv_recommend_name"
        app:layout_constraintEnd_toStartOf="@+id/tv_button"
        app:layout_constraintTop_toTopOf="@+id/tv_recommend_name" />

    <TextView
        android:id="@+id/tv_button"
        android:layout_width="68dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:background="@drawable/shape_bt_gray"
        android:text="联系TA"
        android:textSize="16dp"
        android:textColor="@color/font_black"
        app:layout_constraintBottom_toBottomOf="@+id/tv_numb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_numb" />

    <TextView
        android:id="@+id/tv_type_with"
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_bg_with"
        android:gravity="center"
        android:text="合伙人"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_head"
        app:layout_constraintStart_toStartOf="@+id/iv_user_head"
        app:layout_constraintTop_toTopOf="@+id/iv_user_head" />

    <TextView
        android:id="@+id/tv_type_user"
        android:layout_width="40dp"
        android:layout_height="16dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_bg_user"
        android:gravity="center"
        android:text="用户"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/iv_user_head"
        app:layout_constraintStart_toStartOf="@+id/iv_user_head"
        app:layout_constraintTop_toTopOf="@+id/iv_user_head" />


</android.support.constraint.ConstraintLayout>