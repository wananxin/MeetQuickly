<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:id="@+id/rl_new_frined"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/iv_new_friend"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_new_friend"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/tv_new_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_new_friend"
            android:text="新的朋友"
            android:textColor="@color/font_black"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="72dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_follow"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/iv_user_follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_user_follow"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/tv_user_follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_follow"
            android:text="我的关注"
            android:textColor="@color/font_black"
            android:textSize="16dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="72dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_user_fans"
        android:layout_width="match_parent"
        android:layout_height="72dp">
        <ImageView
            android:id="@+id/iv_user_fans"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_user_fans"
            android:layout_margin="16dp"
            />

        <TextView
            android:id="@+id/tv_user_fans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_user_fans"
            android:text="我的粉丝"
            android:textColor="@color/font_black"
            android:textSize="16dp" />
    </RelativeLayout>
</LinearLayout>