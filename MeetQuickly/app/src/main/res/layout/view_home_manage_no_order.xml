<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/textViewCouponMoney"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewNumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:text="当前暂无订单"
        android:textColor="@color/font_black6"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCouponMoney"
        app:layout_constraintStart_toEndOf="@+id/textViewCouponMoney"
        app:layout_constraintTop_toTopOf="@+id/textViewCouponMoney" />

    <TextView
        android:id="@+id/textViewCompanyName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="发布特惠"
        android:textColor="@color/font_black6"
        android:textSize="12dp"
        app:layout_constraintBottom_toTopOf="@+id/textViewCompanyName2"
        app:layout_constraintStart_toStartOf="@+id/textViewNumb"
        app:layout_constraintTop_toBottomOf="@+id/textViewNumb" />

    <ImageView
        android:id="@+id/imageViewIntoShop1"
        android:layout_width="28dp"
        android:layout_height="35dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCompanyName1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewCompanyName1"
        android:src="@mipmap/ic_back_right_gray" />


    <TextView
        android:id="@+id/textViewCompanyName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="未支付订单（1）"
        android:textColor="@color/font_black6"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewNumb" />

    <ImageView
        android:id="@+id/imageViewIntoShop2"
        android:layout_width="28dp"
        android:layout_height="35dp"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewCompanyName2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewCompanyName2"
        android:src="@mipmap/ic_back_right_gray" />




</android.support.constraint.ConstraintLayout>