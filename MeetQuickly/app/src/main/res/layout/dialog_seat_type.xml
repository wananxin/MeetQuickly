<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="5dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="450dp"
        android:layout_centerInParent="true"
        >


        <ImageView
            android:id="@+id/imageView74"
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/demo_bg" />

        <TextView
            android:id="@+id/textView152"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="中包（4~7人）"
            android:textColor="@color/font_black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView74" />

        <TextView
            android:id="@+id/textView156"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:text="包厢费：￥400"
            android:textColor="@color/font_black"
            android:textSize="12dp"
            app:layout_constraintEnd_toStartOf="@+id/textView157"
            app:layout_constraintStart_toEndOf="@id/textView152"
            app:layout_constraintTop_toBottomOf="@+id/imageView74" />

        <TextView
            android:id="@+id/textView157"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:text="最低消费：￥1980"
            android:textColor="@color/font_black"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView74" />

        <TextView
            android:id="@+id/textView158"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text=" 低消配送:"
            android:textColor="@color/font_black"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView152" />

        <TextView
            android:id="@+id/textView159"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="计较的房间的的咖大空间划分 斯卡迪金凤凰撒科打诨发还啡机计较的房间的的咖啡机计较的房间的的咖啡机计较的房间的的咖啡机计较的房间的的咖啡机计较的房间的的咖啡机"
            android:textColor="@color/font_gray"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView158"
            app:layout_constraintTop_toBottomOf="@+id/textView156" />


    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>