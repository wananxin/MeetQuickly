<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_bg_dialog"
        >


        <TextView
            android:id="@+id/textView147"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:text="分享至"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="66dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView147"
            app:srcCompat="@mipmap/ic_wechat" />

        <ImageView
            android:id="@+id/iv_share_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="66dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView147"
            app:srcCompat="@mipmap/ic_wechat" />

        <TextView
            android:id="@+id/tv_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="微信好友"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_share_friend"
            app:layout_constraintStart_toStartOf="@+id/iv_share_friend"
            app:layout_constraintTop_toBottomOf="@+id/iv_share_friend" />

        <TextView
            android:id="@+id/tv_share_moment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="微信朋友圈"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/iv_share_moment"
            app:layout_constraintStart_toStartOf="@+id/iv_share_moment"
            app:layout_constraintTop_toBottomOf="@+id/iv_share_moment" />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="56dp"
            android:text="取消"
            android:textColor="@color/themeColor"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>