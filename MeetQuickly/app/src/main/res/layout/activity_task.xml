<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.TaskActivity">

    <include layout="@layout/view_toolbar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="每日任务"
                android:textColor="@color/font_black"
                android:textSize="18dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="登录"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toEndOf="@+id/iv_login"
                    app:layout_constraintTop_toTopOf="@+id/iv_login" />

                <TextView
                    android:id="@+id/textViewLoginInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_login"
                    app:layout_constraintLeft_toRightOf="@id/iv_login" />

                <TextView
                    android:id="@+id/textViewLoginEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginEnd="22dp"
                    android:background="@drawable/shape_bt_finishi"
                    android:gravity="center"
                    android:text="已完成"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_share"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_share"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="分享"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_share"
                    app:layout_constraintTop_toTopOf="@id/iv_share" />

                <TextView
                    android:id="@+id/textViewShareInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_share"
                    app:layout_constraintLeft_toRightOf="@id/iv_share" />

                <TextView
                    android:id="@+id/textViewShareEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_moment"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_moment"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewMoment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="发动态"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_moment"
                    app:layout_constraintTop_toTopOf="@id/iv_moment" />

                <TextView
                    android:id="@+id/textViewMomentInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_moment"
                    app:layout_constraintLeft_toRightOf="@id/iv_moment" />

                <TextView
                    android:id="@+id/textViewMomentEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_prop"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewGift"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="赠送一个任意价值的道具"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_gift"
                    app:layout_constraintTop_toTopOf="@id/iv_gift" />

                <TextView
                    android:id="@+id/textViewGiftInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_gift"
                    app:layout_constraintLeft_toRightOf="@id/iv_gift" />

                <TextView
                    android:id="@+id/textViewGiftEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_praise"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_praise"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewPrase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点赞任意一条动态"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_praise"
                    app:layout_constraintTop_toTopOf="@id/iv_praise" />

                <TextView
                    android:id="@+id/textViewPraseInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_praise"
                    app:layout_constraintLeft_toRightOf="@id/iv_praise" />

                <TextView
                    android:id="@+id/textViewPraseEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_phone"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_phone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="修改照片墙"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_phone"
                    app:layout_constraintTop_toTopOf="@id/iv_phone" />

                <TextView
                    android:id="@+id/textViewPhoneInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_phone"
                    app:layout_constraintLeft_toRightOf="@id/iv_phone" />

                <TextView
                    android:id="@+id/textViewPhoneEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="个人任务"
                android:textColor="@color/font_black"
                android:textSize="18dp" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_head"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="设置头像"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_head"
                    app:layout_constraintTop_toTopOf="@id/iv_head" />

                <TextView
                    android:id="@+id/textViewHeadInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_head"
                    app:layout_constraintLeft_toRightOf="@id/iv_head" />

                <TextView
                    android:id="@+id/textViewHeadEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="70dp"
                    android:background="@color/line_gray"
                    app:layout_constraintBottom_toBottomOf="parent" />


            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="70dp">

                <ImageView
                    android:id="@+id/iv_nickname"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:src="@mipmap/ic_task_nickname"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textViewNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="设置昵称"
                    android:textColor="@color/font_black"
                    android:textSize="14dp"
                    app:layout_constraintLeft_toRightOf="@id/iv_nickname"
                    app:layout_constraintTop_toTopOf="@id/iv_nickname" />

                <TextView
                    android:id="@+id/textViewNickNameInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="50魅力值"
                    android:textColor="@color/font_gray"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="@id/iv_nickname"
                    app:layout_constraintLeft_toRightOf="@id/iv_nickname" />

                <TextView
                    android:id="@+id/textViewNickNameEnable"
                    android:layout_width="65dp"
                    android:layout_height="22dp"
                    android:layout_marginRight="22dp"
                    android:background="@drawable/shape_bt_unfinishi"
                    android:gravity="center"
                    android:text="做任务"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </android.support.constraint.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/line_gray" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>