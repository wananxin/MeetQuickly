<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="325dp"
        android:layout_height="250dp"
        android:background="@drawable/shape_bg_dialog"
        >
        <EditText
            android:id="@+id/et_one"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/shape_bt_gray"
            android:gravity="center"
            android:hint="请输入所屏蔽号码人姓名"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/et_two"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="26dp"
            android:inputType="number"
            android:maxLength="11"
            android:hint="请输入所屏蔽号码人手机号"
            android:background="@drawable/shape_bt_gray"
            android:gravity="center"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@id/et_one"
            />

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:padding="20dp"
            android:textSize="16dp"
            android:textColor="@color/themeColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_two"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_sure"
            />

        <TextView
            android:id="@+id/tv_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="确定"
            android:textColor="@color/font_black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_two"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/tv_cancel"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>