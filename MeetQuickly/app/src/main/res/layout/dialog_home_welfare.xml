<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="275dp"
        android:layout_height="330dp">


        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp"
            app:srcCompat="@mipmap/ic_logo_round" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_home_bg_dialog" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/textViewGo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView9" >


            <ImageView
                android:id="@+id/imageViewKuaibi"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_welfare_kuaibi_have" />

            <TextView
                android:id="@+id/textViewKuaibi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="快币"
                android:textColor="@color/font_black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewKuaibi"
                app:layout_constraintStart_toStartOf="@+id/imageViewKuaibi"
                app:layout_constraintTop_toBottomOf="@+id/imageViewKuaibi" />

            <TextView
                android:id="@+id/textViewKuaibiMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400个"
                android:textColor="@color/themeColor"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewKuaibi"
                app:layout_constraintStart_toStartOf="@+id/imageViewKuaibi"
                app:layout_constraintTop_toBottomOf="@+id/textViewKuaibi" />

            <ImageView
                android:id="@+id/imageViewCoupon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_welfare_coupon_have" />

            <TextView
                android:id="@+id/textViewCoupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="代金券"
                android:textColor="@color/font_black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewCoupon"
                app:layout_constraintStart_toStartOf="@+id/imageViewCoupon"
                app:layout_constraintTop_toBottomOf="@+id/imageViewCoupon" />

            <TextView
                android:id="@+id/textViewCouponMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400元"
                android:textColor="@color/themeColor"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewCoupon"
                app:layout_constraintStart_toStartOf="@+id/imageViewCoupon"
                app:layout_constraintTop_toBottomOf="@+id/textViewCoupon" />

            <ImageView
                android:id="@+id/imageViewMoney"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_welfare_money_have" />

            <TextView
                android:id="@+id/textViewMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="现金"
                android:textColor="@color/font_black"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewMoney"
                app:layout_constraintStart_toStartOf="@+id/imageViewMoney"
                app:layout_constraintTop_toBottomOf="@+id/imageViewMoney" />

            <TextView
                android:id="@+id/textViewMoneyNumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="400个"
                android:textColor="@color/themeColor"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageViewMoney"
                app:layout_constraintStart_toStartOf="@+id/imageViewMoney"
                app:layout_constraintTop_toBottomOf="@+id/textViewMoney" />
        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/line_gray"
            app:layout_constraintBottom_toTopOf="@id/textViewGo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/textViewGo"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="去看看"
            android:background="@drawable/shape_bg_welfare_bottom"
            android:textColor="@color/themeColor"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>