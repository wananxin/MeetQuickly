<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.user.ForgetGustureActivity">

    <include
        android:id="@+id/include"
        layout="@layout/view_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_phone_numb"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="38dp"
        android:background="@null"
        android:hint="+86   请输入手机号码"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/include" />

    <View
        android:id="@+id/view_phone_numb"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_phone_numb" />

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="120dp"
        android:background="@null"
        android:hint="验证码"
        android:inputType="number"
        android:maxLength="6"
        android:maxLines="1"
        android:textColor="@color/font_black"
        android:textColorHint="@color/font_gray"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_phone_numb" />

    <TextView
        android:id="@+id/tv_get_code"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_bt_white"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/themeColor"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="@id/et_phone_numb"
        app:layout_constraintTop_toBottomOf="@id/et_phone_numb" />

    <View
        android:id="@+id/view_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:background="@color/line_gray"
        app:layout_constraintTop_toBottomOf="@id/et_confirm_password" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_margin="38dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_bt_gray"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/font_black"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@id/view_confirm_password" />

</android.support.constraint.ConstraintLayout>